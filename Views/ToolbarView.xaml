<UserControl x:Class="StudioForge.Views.ToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:StudioForge.ViewModels"
             xmlns:local="clr-namespace:StudioForge.Views">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
            <Button Content="Test ▼" Style="{StaticResource ToolbarButtonStyle}" Padding="10,6" Command="{Binding MenuCommand}" CommandParameter="Test" />
            <ToggleButton Content="▶" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ToolbarCommand}" CommandParameter="Play" IsChecked="{Binding ActiveTool, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Play}" />
            <ToggleButton Content="❚❚" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ToolbarCommand}" CommandParameter="Pause" IsChecked="{Binding ActiveTool, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Pause}" />
            <ToggleButton Content="■" Style="{StaticResource ToolbarButtonStyle}" Command="{Binding ToolbarCommand}" CommandParameter="Stop" IsChecked="{Binding ActiveTool, Converter={StaticResource ValueEqualsConverter}, ConverterParameter=Stop}" />
        </StackPanel>

        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ToolbarItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Style="{StaticResource ToolbarButtonStyle}"
                                      Content="{Binding}"
                                      Tag="{Binding}"
                                      Command="{Binding DataContext.ToolbarCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}">
                            <ToggleButton.IsChecked>
                                <MultiBinding Converter="{StaticResource EqualityMultiConverter}">
                                    <Binding Path="DataContext.ActiveTool" RelativeSource="{RelativeSource AncestorType=Window}" />
                                    <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                </MultiBinding>
                            </ToggleButton.IsChecked>
                        </ToggleButton>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="Average Laptop" Foreground="{StaticResource Brush.TextMuted}" />
            <TextBlock Text="1366x768" Foreground="{StaticResource Brush.TextMuted}" />
            <TextBlock Text="8192 MB" Foreground="{StaticResource Brush.TextMuted}" />
            <Button Content="Fit to Window ▼" Style="{StaticResource ToolbarButtonStyle}" Padding="10,6" />
            <CheckBox Content="Virtual Controller" Foreground="{StaticResource Brush.TextPrimary}" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
