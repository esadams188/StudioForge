<Window x:Class="StudioForge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:StudioForge.Views"
        xmlns:viewModels="clr-namespace:StudioForge.ViewModels"
        Title="StudioForge"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{StaticResource Brush.WindowBackground}"
        Width="1366" Height="768">
    <Window.Resources>
        <viewModels:ValueEqualsConverter x:Key="ValueEqualsConverter" />
        <viewModels:EqualityMultiConverter x:Key="EqualityMultiConverter" />
    </Window.Resources>
    <Border BorderBrush="{StaticResource Brush.PanelBorder}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="{StaticResource Brush.TitleBar}" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="StudioForge" Style="{StaticResource PanelHeaderText}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource TitleBarButtonStyle}" Content="➖" Click="Minimize_Click" />
                    <Button Style="{StaticResource TitleBarButtonStyle}" Content="⬜" Click="Maximize_Click" />
                    <Button Style="{StaticResource CloseButtonStyle}" Content="✕" Click="Close_Click" />
                </StackPanel>
            </Grid>

            <!-- Main Layout -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.22*" MinHeight="160" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="280" />
                </Grid.ColumnDefinitions>

                <!-- Menu Bar -->
                <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource Brush.PanelBackground}" BorderBrush="{StaticResource Brush.PanelBorder}" BorderThickness="0,0,0,1">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" Margin="6,0">
                            <ItemsControl ItemsSource="{Binding MenuItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource MenuButtonStyle}" Content="{Binding}" Command="{Binding DataContext.MenuCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Toolbar -->
                <Border Grid.Row="1" Grid.ColumnSpan="2" Background="{StaticResource Brush.PanelBackground}" BorderBrush="{StaticResource Brush.PanelBorder}" BorderThickness="0,0,0,1" Padding="6,4">
                    <views:ToolbarView />
                </Border>

                <!-- Viewport -->
                <views:ViewportView Grid.Row="2" Grid.Column="0" />

                <!-- Explorer -->
                <views:ExplorerView Grid.Row="2" Grid.Column="1" />

                <!-- Output -->
                <views:OutputView Grid.Row="3" Grid.ColumnSpan="2" />
            </Grid>
        </Grid>
    </Border>
</Window>
